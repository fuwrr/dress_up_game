<Window x:Class="DressUpGame.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="It's interesting to know..." Height="300" Width="750">
    <Grid>
        <TextBlock x:Name="DescriptionTextBlock" Text="{Binding Description}" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Margin="20px"/>

        <Button x:Name="myButton" VerticalAlignment="Bottom" Margin="10" Width="70" BorderBrush="{x:Null}" Click="OKButton_Click" Cursor="Hand"  MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" BorderThickness="0" Background="Transparent">
            <Image Source="assets/controls/okay_btn.png"/>
        </Button>
    </Grid>
</Window>
